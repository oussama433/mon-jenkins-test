pipeline {
    agent any
    
    environment {
        DOCKERHUB_CREDENTIALS = credentials('docker-hub-cred')
        DOCKER_IMAGE = 'oussama433/student-project'
        SCANNER_HOME = tool 'sonar-scanner'
    }
    
    stages {
        stage('Checkout from GitHub') {
            steps {
                echo 'üì• R√©cup√©ration du code depuis GitHub...'
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: '*/main']],
                    userRemoteConfigs: [[
                        url: 'https://github.com/oussama433/mon-jenkins-test.git',
                        credentialsId: 'github-cred'
                    ]]
                ])
            }
        }
        
        stage('Build with Maven') {
            steps {
                echo 'üî® Construction du projet avec Maven...'
                sh './mvnw clean package -DskipTests'
                echo '‚úÖ Build Maven r√©ussi!'
            }
        }
        
        stage('SonarQube Analysis') {
            steps {
                echo 'üîç Analyse de la qualit√© du code avec SonarQube...'
                withSonarQubeEnv('SonarQube') {
                    sh """
                        ${SCANNER_HOME}/bin/sonar-scanner \
                        -Dsonar.projectKey=student-project-jenkins \
                        -Dsonar.projectName='Student Project' \
                        -Dsonar.sources=src \
                        -Dsonar.java.binaries=target/classes
                    """
                }
                echo '‚úÖ Analyse SonarQube soumise !'
            }
        }
        
        stage('Quality Gate') {
            steps {
                echo '‚è≥ Attente du r√©sultat de la Quality Gate...'
                withSonarQubeEnv('SonarQube') {
                    timeout(time: 5, unit: 'MINUTES') {
                        def qg = waitForQualityGate abortPipeline: true
                        echo "üéØ Quality Gate status: ${qg.status}"
                    }
                }
            }
        }
        
        stage('Build Docker Image') {
            steps {
                echo 'üê≥ Construction de l\'image Docker...'
                sh """
                    docker build -t ${DOCKER_IMAGE}:${BUILD_NUMBER} .
                """
                echo "‚úÖ Image Docker construite : ${DOCKER_IMAGE}:${BUILD_NUMBER}"
            }
        }
        
        stage('Push Docker Hub') {
            steps {
                echo 'üì§ Push de l\'image vers Docker Hub...'
                withCredentials([usernamePassword(credentialsId: 'docker-hub-cred', passwordVariable: 'DOCKER_PASSWORD', usernameVariable: 'DOCKER_USERNAME')]) {
                    sh """
                        echo $DOCKER_PASSWORD | docker login -u $DOCKER_USERNAME --password-stdin
                        docker push ${DOCKER_IMAGE}:${BUILD_NUMBER}
                    """
                }
                echo '‚úÖ Image Docker pouss√©e sur Docker Hub'
            }
        }
    }
    
    post {
        success {
            echo 'üéâ Pipeline ex√©cut√© avec succ√®s!'
        }
        failure {
            echo '‚ùå Pipeline a √©chou√©.'
        }
    }
}
