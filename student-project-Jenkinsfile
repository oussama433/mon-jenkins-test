pipeline {
    agent any
    
    environment {
        DOCKER_IMAGE = 'oussama433/student-project'
        SCANNER_HOME = tool 'sonar-scanner'
    }
    
    stages {
        stage('Checkout from GitHub') {
            steps {
                echo 'ðŸ“¥ RÃ©cupÃ©ration du code depuis GitHub...'
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: '*/main']],
                    userRemoteConfigs: [[
                        url: 'https://github.com/oussama433/mon-jenkins-test.git',
                        credentialsId: 'github-cred'
                    ]]
                ])
            }
        }
        
        stage('Build with Maven') {
            steps {
                echo 'ðŸ”¨ Construction du projet avec Maven...'
                sh './mvnw clean package -DskipTests'
                echo 'âœ… Build Maven rÃ©ussi!'
            }
        }
        
        stage('SonarQube Analysis') {
            steps {
                echo 'ðŸ” Analyse de la qualitÃ© du code avec SonarQube...'
                
                // MÃ©thode avec withSonarQubeEnv (utilise SonarQube-Server)
                withSonarQubeEnv('SonarQube-Server') {
                    sh """
                        ${SCANNER_HOME}/bin/sonar-scanner \
                        -Dsonar.projectKey=student-project-jenkins-${BUILD_NUMBER} \
                        -Dsonar.projectName='Student Project' \
                        -Dsonar.sources=src \
                        -Dsonar.java.binaries=target/classes
                    """
                }
                echo 'âœ… Analyse SonarQube soumise !'
            }
        }
        
        stage('Quality Gate') {
            steps {
                echo 'â³ Attente du rÃ©sultat de la Quality Gate...'
                withSonarQubeEnv('SonarQube-Server') {
                    timeout(time: 5, unit: 'MINUTES') {
                        waitForQualityGate abortPipeline: true
                    }
                }
                echo 'âœ… Quality Gate passÃ©e !'
            }
        }
        
        stage('Build Docker Image') {
            steps {
                echo 'ðŸ³ Construction de l\'image Docker...'
                script {
                    // VÃ©rifier si un Dockerfile existe
                    if (fileExists('Dockerfile')) {
                        withCredentials([usernamePassword(
                            credentialsId: 'docker-hub-cred',
                            usernameVariable: 'DOCKER_USER',
                            passwordVariable: 'DOCKER_PASS'
                        )]) {
                            sh """
                                docker build -t ${DOCKER_IMAGE}:${BUILD_NUMBER} .
                                docker tag ${DOCKER_IMAGE}:${BUILD_NUMBER} ${DOCKER_IMAGE}:latest
                            """
                        }
                    } else {
                        echo 'âš ï¸  Aucun Dockerfile trouvÃ©, crÃ©ation d\'un Dockerfile simple...'
                        sh '''
                            cat > Dockerfile << DOCKERFILE
FROM openjdk:17-jdk-slim
COPY target/*.jar app.jar
EXPOSE 8080
ENTRYPOINT ["java", "-jar", "/app.jar"]
DOCKERFILE
                        '''
                        withCredentials([usernamePassword(
                            credentialsId: 'docker-hub-cred',
                            usernameVariable: 'DOCKER_USER',
                            passwordVariable: 'DOCKER_PASS'
                        )]) {
                            sh """
                                docker build -t ${DOCKER_IMAGE}:${BUILD_NUMBER} .
                                docker tag ${DOCKER_IMAGE}:${BUILD_NUMBER} ${DOCKER_IMAGE}:latest
                            """
                        }
                    }
                }
                echo 'âœ… Image Docker construite !'
            }
        }
        
        stage('Push Docker Hub') {
            steps {
                echo 'ðŸ“¤ Pushing image to Docker Hub...'
                withCredentials([usernamePassword(
                    credentialsId: 'docker-hub-cred',
                    usernameVariable: 'DOCKER_USER',
                    passwordVariable: 'DOCKER_PASS'
                )]) {
                    sh """
                        echo ${DOCKER_PASS} | docker login -u ${DOCKER_USER} --password-stdin
                        docker push ${DOCKER_IMAGE}:${BUILD_NUMBER}
                        docker push ${DOCKER_IMAGE}:latest
                        echo "ðŸŽ‰ Images disponibles sur Docker Hub:"
                        echo "   - ${DOCKER_IMAGE}:${BUILD_NUMBER}"
                        echo "   - ${DOCKER_IMAGE}:latest"
                    """
                }
                echo 'âœ… Images poussÃ©es vers Docker Hub !'
            }
        }
    }
    
    post {
        success {
            echo 'ðŸŽ‰ðŸŽ‰ðŸŽ‰ PIPELINE RÃ‰USSI ! ðŸŽ‰ðŸŽ‰ðŸŽ‰'
            echo '================================'
            echo 'RÃ©sumÃ©:'
            echo '1. âœ… Code rÃ©cupÃ©rÃ© depuis GitHub'
            echo '2. âœ… Application construite avec Maven'
            echo '3. âœ… Analyse qualitÃ© avec SonarQube'
            echo '4. âœ… Quality Gate validÃ©e'
            echo '5. âœ… Image Docker construite'
            echo '6. âœ… Image publiÃ©e sur Docker Hub'
            echo ''
            echo 'ðŸ“Š Rapport SonarQube: http://192.168.33.10:9000'
            echo 'ðŸ³ Image Docker: https://hub.docker.com/r/oussama433/student-project'
        }
        failure {
            echo 'âŒâŒâŒ PIPELINE Ã‰CHOUÃ‰ âŒâŒâŒ'
            echo '================================'
            echo 'ProblÃ¨mes possibles:'
            echo '1. âŒ Credentials manquants dans Jenkins'
            echo '2. âŒ SonarQube inaccessible'
            echo '3. âŒ ProblÃ¨me de build Maven'
            echo '4. âŒ Ã‰chec de la Quality Gate'
            echo '5. âŒ Erreur Docker'
            echo ''
            echo 'ðŸ”§ VÃ©rifiez les logs ci-dessus pour le dÃ©tail.'
        }
        cleanup {
            echo 'ðŸ§¹ Nettoyage de l\'espace de travail...'
            // Nettoyer les images Docker intermÃ©diaires
            sh 'docker system prune -f || true'
        }
    }
}
