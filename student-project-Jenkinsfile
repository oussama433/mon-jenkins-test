pipeline {
    agent any
    
    environment {
        // IDs UNIQUES pour chaque credential
        DOCKERHUB_CREDENTIALS = credentials('docker-hub-cred')
        DOCKER_IMAGE = 'oussama433/student-project'
        SCANNER_HOME = tool 'sonar-scanner'
        GITHUB_CREDS = credentials('github-cred')
    }
    
    stages {
        stage('Checkout from GitHub') {
            steps {
                echo 'üì• R√©cup√©ration du code depuis GitHub...'
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: '*/main']],
                    userRemoteConfigs: [[
                        url: 'https://github.com/oussama433/mon-jenkins-test.git',
                        credentialsId: 'github-cred'  // M√äME ID que ci-dessus
                    ]]
                ])
            }
        }
        
        stage('Build with Maven') {
            steps {
                echo 'üî® Construction du projet avec Maven...'
                sh './mvnw clean package -DskipTests'
                echo '‚úÖ Build Maven r√©ussi!'
            }
        }
        
        stage('SonarQube Analysis') {
            steps {
                echo 'üîç Analyse de la qualit√© du code avec SonarQube...'
                
                // OPTION 1: Avec withSonarQubeEnv (si vous avez cr√©√© SonarQube-Server)
                withSonarQubeEnv('SonarQube-Server') {
                    sh """
                        ${SCANNER_HOME}/bin/sonar-scanner \
                        -Dsonar.projectKey=student-project-jenkins \
                        -Dsonar.projectName='Student Project' \
                        -Dsonar.sources=src \
                        -Dsonar.java.binaries=target/classes
                    """
                }
                
                // OPTION 2: Avec token manuel (si vous avez cr√©√© sonarqube-token)
                // withCredentials([string(credentialsId: 'sonarqube-token', variable: 'SONAR_TOKEN')]) {
                //     sh """
                //         ${SCANNER_HOME}/bin/sonar-scanner \
                //         -Dsonar.projectKey=student-project-jenkins \
                //         -Dsonar.projectName='Student Project' \
                //         -Dsonar.sources=src \
                //         -Dsonar.java.binaries=target/classes \
                //         -Dsonar.host.url=http://192.168.33.10:9000 \
                //         -Dsonar.token=${SONAR_TOKEN}
                //     """
                // }
                
                echo '‚úÖ Analyse SonarQube soumise !'
            }
        }
        
        stage('Quality Gate') {
            steps {
                echo '‚è≥ Attente du r√©sultat de la Quality Gate...'
                withSonarQubeEnv('SonarQube-Server') {
                    timeout(time: 5, unit: 'MINUTES') {
                        waitForQualityGate abortPipeline: true
                    }
                }
                echo '‚úÖ Quality Gate pass√©e !'
            }
        }
        
        stage('Build Docker Image') {
            steps {
                echo 'üê≥ Construction de l\'image Docker...'
                withCredentials([usernamePassword(
                    credentialsId: 'docker-hub-cred',  // M√äME ID que ci-dessus
                    usernameVariable: 'DOCKER_USER',
                    passwordVariable: 'DOCKER_PASS'
                )]) {
                    sh """
                        docker build -t ${DOCKER_IMAGE}:${BUILD_NUMBER} .
                        docker tag ${DOCKER_IMAGE}:${BUILD_NUMBER} ${DOCKER_IMAGE}:latest
                    """
                }
                echo '‚úÖ Image Docker construite !'
            }
        }
        
        stage('Push Docker Hub') {
            steps {
                echo 'üì§ Pushing image to Docker Hub...'
                withCredentials([usernamePassword(
                    credentialsId: 'docker-hub-cred',  // M√äME ID que ci-dessus
                    usernameVariable: 'DOCKER_USER',
                    passwordVariable: 'DOCKER_PASS'
                )]) {
                    sh """
                        echo ${DOCKER_PASS} | docker login -u ${DOCKER_USER} --password-stdin
                        docker push ${DOCKER_IMAGE}:${BUILD_NUMBER}
                        docker push ${DOCKER_IMAGE}:latest
                    """
                }
                echo '‚úÖ Images pouss√©es vers Docker Hub !'
            }
        }
    }
    
    post {
        success {
            echo 'üéâ Pipeline ex√©cut√© avec succ√®s!'
            echo 'üìä √âtapes compl√©t√©es:'
            echo '   ‚úÖ Checkout GitHub'
            echo '   ‚úÖ Build Maven'
            echo '   ‚úÖ Analyse SonarQube'
            echo '   ‚úÖ Quality Gate'
            echo '   ‚úÖ Build Docker'
            echo '   ‚úÖ Push Docker Hub'
        }
        failure {
            echo '‚ùå Pipeline a √©chou√©.'
            echo 'üîç V√©rifiez:'
            echo '   1. Les credentials existent dans Jenkins'
            echo '   2. Les IDs sont corrects dans le Jenkinsfile'
            echo '   3. SonarQube est accessible: http://192.168.33.10:9000'
        }
    }
}
