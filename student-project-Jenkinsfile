pipeline {
    agent any
    
    environment {
        DOCKER_IMAGE = 'oussama433/student-project'
        SCANNER_HOME = tool 'sonar-scanner'
        SONAR_HOST_URL = 'http://192.168.33.10:9000'
        
        // Configuration Kubernetes
        K8S_NAMESPACE = "student-namespace-${BUILD_NUMBER}"
        APP_NAME = "student-app-${BUILD_NUMBER}"
        DOCKER_REGISTRY = "docker.io"
    }
    
    stages {
        stage('Checkout & Setup') {
            steps {
                echo 'ğŸš€ DÃ©marrage du pipeline CI/CD avec Kubernetes'
                checkout scm
                echo "âœ… Build #${BUILD_NUMBER}"
                echo "ğŸ“¦ Namespace: ${K8S_NAMESPACE}"
                echo "ğŸ³ Image: ${DOCKER_IMAGE}:${BUILD_NUMBER}"
            }
        }
        
        stage('Build with Maven') {
            steps {
                echo 'ğŸ”¨ Construction du projet avec Maven...'
                sh './mvnw clean package -DskipTests'
                echo 'âœ… Build Maven rÃ©ussi!'
            }
        }
        
        stage('SonarQube Analysis') {
            steps {
                echo 'ğŸ” Analyse de la qualitÃ© du code avec SonarQube...'
                
                withCredentials([string(credentialsId: 'sonarqube-token', variable: 'SONAR_TOKEN')]) {
                    sh """
                        ${SCANNER_HOME}/bin/sonar-scanner \
                        -Dsonar.projectKey=student-project-jenkins-${BUILD_NUMBER} \
                        -Dsonar.projectName='Student Project' \
                        -Dsonar.sources=src \
                        -Dsonar.java.binaries=target/classes \
                        -Dsonar.host.url=${SONAR_HOST_URL} \
                        -Dsonar.token=${SONAR_TOKEN}
                    """
                }
                echo 'âœ… Analyse SonarQube soumise !'
            }
        }
        
        stage('Build Docker Image') {
            steps {
                echo 'ğŸ³ Construction de l\'image Docker...'
                
                sh '''
                    # CrÃ©er un Dockerfile optimisÃ©
                    cat > Dockerfile << DOCKERFILE
FROM eclipse-temurin:17-jre-alpine
WORKDIR /app
COPY target/*.jar app.jar
RUN addgroup -S spring && adduser -S spring -G spring
USER spring:spring
EXPOSE 8080
ENTRYPOINT ["java", "-jar", "/app.jar"]
DOCKERFILE
                    
                    echo "ğŸ“„ Dockerfile crÃ©Ã©:"
                    cat Dockerfile
                '''
                
                withCredentials([usernamePassword(
                    credentialsId: 'docker-hub-cred',
                    usernameVariable: 'DOCKER_USER',
                    passwordVariable: 'DOCKER_PASS'
                )]) {
                    sh """
                        # Build de l'image
                        docker build -t ${DOCKER_IMAGE}:${BUILD_NUMBER} .
                        docker tag ${DOCKER_IMAGE}:${BUILD_NUMBER} ${DOCKER_IMAGE}:latest
                        
                        # Push vers Docker Hub (optionnel)
                        echo "ğŸ” Authentification Docker Hub..."
                        echo ${DOCKER_PASS} | docker login -u ${DOCKER_USER} --password-stdin || echo "âš ï¸  Auth Ã©chouÃ©e"
                        
                        echo "ğŸ“¤ Push de l'image..."
                        docker push ${DOCKER_IMAGE}:${BUILD_NUMBER} || echo "âš ï¸  Push Ã©chouÃ© - continuer sans"
                        
                        echo "âœ… Image: ${DOCKER_IMAGE}:${BUILD_NUMBER}"
                    """
                }
            }
        }
        
        stage('Kubernetes Setup') {
            steps {
                echo 'â˜¸ï¸  Configuration Kubernetes...'
                
                script {
                    // VÃ©rifier que kubectl fonctionne
                    def k8sCheck = sh(
                        script: 'kubectl cluster-info || echo "K8S_NOT_READY"',
                        returnStdout: true
                    ).trim()
                    
                    if (k8sCheck.contains("K8S_NOT_READY")) {
                        echo "âš ï¸  Kubernetes non disponible - utilisation de MicroK8s"
                        sh '''
                            # VÃ©rifier MicroK8s
                            microk8s status || echo "MicroK8s non dÃ©marrÃ©"
                            # Utiliser le kubectl de MicroK8s
                            sudo snap alias microk8s.kubectl kubectl || true
                        '''
                    }
                    
                    // CrÃ©er le namespace
                    sh """
                        echo "ğŸ“ CrÃ©ation du namespace ${K8S_NAMESPACE}..."
                        kubectl create namespace ${K8S_NAMESPACE} || echo "Namespace existe dÃ©jÃ "
                        
                        echo "ğŸ“Š Cluster info:"
                        kubectl cluster-info
                        echo ""
                        echo "ğŸ“¦ Nodes:"
                        kubectl get nodes
                        echo ""
                        echo "ğŸ·ï¸  Namespaces:"
                        kubectl get namespaces
                    """
                }
            }
        }
        
        stage('Deploy to Kubernetes') {
            steps {
                echo 'ğŸš€ DÃ©ploiement sur Kubernetes...'
                
                sh """
                    # CrÃ©er les manifests Kubernetes
                    cat > k8s-deployment.yaml <<MANIFEST
---
# Configuration de l'application
apiVersion: v1
kind: ConfigMap
metadata:
  name: ${APP_NAME}-config
  namespace: ${K8S_NAMESPACE}
data:
  APP_NAME: "Student Application"
  VERSION: "${BUILD_NUMBER}"
---
# DÃ©ploiement principal
apiVersion: apps/v1
kind: Deployment
metadata:
  name: ${APP_NAME}
  namespace: ${K8S_NAMESPACE}
  labels:
    app: student-app
    version: "${BUILD_NUMBER}"
    managed-by: jenkins
spec:
  replicas: 2
  selector:
    matchLabels:
      app: student-app
      version: "${BUILD_NUMBER}"
  template:
    metadata:
      labels:
        app: student-app
        version: "${BUILD_NUMBER}"
    spec:
      containers:
      - name: app
        image: ${DOCKER_IMAGE}:${BUILD_NUMBER}
        imagePullPolicy: IfNotPresent
        ports:
        - containerPort: 8080
          name: http
        env:
        - name: SPRING_APPLICATION_NAME
          valueFrom:
            configMapKeyRef:
              name: ${APP_NAME}-config
              key: APP_NAME
        resources:
          requests:
            memory: "256Mi"
            cpu: "100m"
          limits:
            memory: "512Mi"
            cpu: "500m"
        readinessProbe:
          httpGet:
            path: /actuator/health
            port: 8080
          initialDelaySeconds: 30
          periodSeconds: 10
        livenessProbe:
          httpGet:
            path: /actuator/health
            port: 8080
          initialDelaySeconds: 45
          periodSeconds: 15
---
# Service
apiVersion: v1
kind: Service
metadata:
  name: ${APP_NAME}-service
  namespace: ${K8S_NAMESPACE}
spec:
  selector:
    app: student-app
    version: "${BUILD_NUMBER}"
  ports:
  - port: 80
    targetPort: 8080
    protocol: TCP
    name: http
  type: ClusterIP
---
# Ingress (si ingress controller est activÃ©)
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: ${APP_NAME}-ingress
  namespace: ${K8S_NAMESPACE}
  annotations:
    nginx.ingress.kubernetes.io/rewrite-target: /
spec:
  rules:
  - http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: ${APP_NAME}-service
            port:
              number: 80
MANIFEST

                    echo "ğŸ“„ Manifest crÃ©Ã©: k8s-deployment.yaml"
                    echo ""
                    echo "ğŸ”§ Application du manifest..."
                    kubectl apply -f k8s-deployment.yaml
                    
                    echo ""
                    echo "â³ Attente du dÃ©marrage des pods..."
                    sleep 20
                    
                    echo ""
                    echo "ğŸ“Š Ã‰TAT DU DÃ‰PLOIEMENT:"
                    kubectl get all -n ${K8S_NAMESPACE}
                    
                    echo ""
                    echo "ğŸ“œ LOGS DES PODS:"
                    kubectl get pods -n ${K8S_NAMESPACE} -o wide
                    
                    echo ""
                    echo "ğŸ” DÃ‰TAILS:"
                    kubectl describe deployment ${APP_NAME} -n ${K8S_NAMESPACE} | head -50
                """
            }
        }
        
        stage('Verify Deployment') {
            steps {
                echo 'âœ… VÃ©rification du dÃ©ploiement...'
                
                sh """
                    echo "ğŸ”„ VÃ©rification de l'Ã©tat des pods..."
                    
                    # Attendre que les pods soient prÃªts
                    for i in {1..10}; do
                        READY_PODS=\$(kubectl get deployment ${APP_NAME} -n ${K8S_NAMESPACE} -o jsonpath='{.status.readyReplicas}' 2>/dev/null || echo "0")
                        DESIRED_PODS=\$(kubectl get deployment ${APP_NAME} -n ${K8S_NAMESPACE} -o jsonpath='{.status.replicas}' 2>/dev/null || echo "0")
                        
                        if [ "\$READY_PODS" = "\$DESIRED_PODS" ] && [ "\$READY_PODS" != "0" ]; then
                            echo "âœ… Tous les pods sont prÃªts (\$READY_PODS/\$DESIRED_PODS)"
                            break
                        fi
                        
                        echo "â³ Pods prÃªts: \$READY_PODS/\$DESIRED_PODS (attente...)"
                        sleep 10
                    done
                    
                    echo ""
                    echo "ğŸŒ ACCÃˆS Ã€ L'APPLICATION:"
                    echo ""
                    
                    # MÃ©thode 1: Port-forward temporaire pour test
                    echo "1. Port-forward (pour test):"
                    echo "   kubectl port-forward service/${APP_NAME}-service -n ${K8S_NAMESPACE} 8080:80 &"
                    echo "   curl http://localhost:8080/actuator/health"
                    echo ""
                    
                    # MÃ©thode 2: Via NodePort si service NodePort
                    echo "2. CrÃ©er un service NodePort pour accÃ¨s externe:"
                    cat > nodeport-service.yaml <<NODEPORT
apiVersion: v1
kind: Service
metadata:
  name: ${APP_NAME}-nodeport
  namespace: ${K8S_NAMESPACE}
spec:
  selector:
    app: student-app
    version: "${BUILD_NUMBER}"
  ports:
  - port: 80
    targetPort: 8080
    nodePort: 3${BUILD_NUMBER}
  type: NodePort
NODEPORT
                    
                    echo "   kubectl apply -f nodeport-service.yaml"
                    echo "   AccÃ¨s: http://<IP_VM>:3${BUILD_NUMBER}"
                    echo ""
                    
                    # MÃ©thode 3: Via Ingress
                    echo "3. Via Ingress (si activÃ©):"
                    echo "   kubectl get ingress -n ${K8S_NAMESPACE}"
                    echo ""
                    
                    echo "ğŸ”§ COMMANDES UTILES:"
                    echo "   kubectl logs -f deployment/${APP_NAME} -n ${K8S_NAMESPACE}"
                    echo "   kubectl exec -it \$(kubectl get pods -n ${K8S_NAMESPACE} -l app=student-app -o name | head -1) -- /bin/sh"
                    echo "   kubectl delete namespace ${K8S_NAMESPACE}  # Pour nettoyer"
                """
            }
        }
    }
    
    post {
        success {
            echo 'ğŸ‰ğŸ‰ğŸ‰ DÃ‰PLOIEMENT KUBERNETES RÃ‰USSI ! ğŸ‰ğŸ‰ğŸ‰'
            echo '============================================='
            echo ''
            echo 'ğŸ“‹ RÃ‰SUMÃ‰:'
            echo "   Build #: ${BUILD_NUMBER}"
            echo "   Image: ${DOCKER_IMAGE}:${BUILD_NUMBER}"
            echo "   Namespace: ${K8S_NAMESPACE}"
            echo "   DÃ©ploiement: ${APP_NAME}"
            echo "   RÃ©plicas: 2"
            echo ''
            echo 'ğŸ”— LIENS:'
            echo "   - ğŸ“Š SonarQube: http://192.168.33.10:9000/dashboard?id=student-project-jenkins-${BUILD_NUMBER}"
            echo "   - ğŸ³ Docker Hub: https://hub.docker.com/r/oussama433/student-project/tags"
            echo ''
            echo 'ğŸ› ï¸  KUBERNETES COMMANDS:'
            echo "   kubectl get all -n ${K8S_NAMESPACE}"
            echo "   kubectl logs -f deployment/${APP_NAME} -n ${K8S_NAMESPACE}"
            echo "   kubectl describe deployment ${APP_NAME} -n ${K8S_NAMESPACE}"
            echo ''
            echo 'ğŸŒ POUR ACCÃ‰DER Ã€ L\'APP:'
            echo '   1. kubectl port-forward service/${APP_NAME}-service -n ${K8S_NAMESPACE} 8080:80'
            echo '   2. Ouvrir: http://localhost:8080'
        }
        failure {
            echo 'âŒ DÃ©ploiement Ã©chouÃ©.'
            echo 'ğŸ”§ Debug Kubernetes:'
            echo '   kubectl get events -n ${K8S_NAMESPACE}'
            echo '   kubectl describe pods -n ${K8S_NAMESPACE}'
        }
        cleanup {
            echo 'ğŸ§¹ Nettoyage...'
            sh '''
                # Nettoyer les fichiers temporaires
                rm -f k8s-deployment.yaml nodeport-service.yaml || true
                # Nettoyer Docker
                docker system prune -f || true
            '''
        }
    }
}
