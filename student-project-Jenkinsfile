pipeline {
    agent any
    
    environment {
        DOCKERHUB_CREDENTIALS = credentials('docker-hub-cred')
        DOCKER_IMAGE = 'oussama433/student-project'
        SCANNER_HOME = tool 'sonar-scanner'
        // 1. R√©cup√©rer le token depuis Jenkins (ID: sonarqube-token)
        SONAR_TOKEN = credentials('sonarqube-token')
    }
    
    stages {
        stage('Checkout from GitHub') {
            steps {
                echo 'üì• R√©cup√©ration du code depuis GitHub...'
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: '*/main']],
                    userRemoteConfigs: [[
                        url: 'https://github.com/oussama433/mon-jenkins-test.git',
                        credentialsId: 'github-cred'
                    ]]
                ])
            }
        }
        
        stage('Build with Maven') {
            steps {
                echo 'üî® Construction du projet avec Maven...'
                sh './mvnw clean package -DskipTests'
                echo '‚úÖ Build Maven r√©ussi!'
            }
        }
        
        stage('SonarQube Analysis') {
            steps {
                echo 'üîç Analyse de la qualit√© du code avec SonarQube...'
                echo "Token ID utilis√©: sonarqube-token"
                // 2. withSonarQubeEnv injecte SONAR_HOST_URL automatiquement
                withSonarQubeEnv('SonarQube-Server') {
                    // 3. Passer EXPLICITEMENT le token avec -Dsonar.login
                    sh """
                        ${SCANNER_HOME}/bin/sonar-scanner \
                        -Dsonar.projectKey=student-project-jenkins \
                        -Dsonar.projectName='Student Project' \
                        -Dsonar.sources=src \
                        -Dsonar.java.binaries=target/classes \
                        -Dsonar.host.url=\${SONAR_HOST_URL} \
                        -Dsonar.login=${SONAR_TOKEN}
                    """
                }
                echo '‚úÖ Analyse SonarQube soumise !'
            }
        }
        
        stage('Quality Gate') {
            steps {
                echo '‚è≥ Attente du r√©sultat de la Quality Gate...'
                // 4. Timeout pour √©viter un blocage infini
                timeout(time: 5, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
                echo '‚úÖ Quality Gate pass√©e !'
            }
        }
        
        stage('Simuler Build Docker') {
            steps {
                echo 'üê≥ [SIMULATION] Construction de l\'image Docker...'
                echo "Image: ${DOCKER_IMAGE}:${BUILD_NUMBER}"
                echo '‚úÖ √âtape Docker simul√©e (Docker √† configurer sur Jenkins)'
            }
        }
        
        stage('Simuler Push Docker Hub') {
            steps {
                echo 'üì§ [SIMULATION] Pushing image to Docker Hub...'
                echo '‚úÖ Push simul√© vers Docker Hub'
            }
        }
    }
    
    post {
        success {
            echo 'üéâ Pipeline ex√©cut√© avec succ√®s!'
            echo 'üìä Toutes les √©tapes sont pass√©es:'
            echo '   ‚úÖ Checkout GitHub'
            echo '   ‚úÖ Build Maven'
            echo '   ‚úÖ Analyse SonarQube'
            echo '   ‚úÖ Quality Gate'
            echo '   ‚ö†Ô∏è  Docker (simulation)'
        }
        failure {
            echo '‚ùå Pipeline a √©chou√©.'
            echo 'üîß V√©rifiez:'
            echo '   1. Token SonarQube dans Jenkins (ID: sonarqube-token)'
            echo '   2. SonarQube accessible: http://192.168.33.10:9000'
            echo '   3. Serveur SonarQube configur√© dans Jenkins'
        }
    }
}
