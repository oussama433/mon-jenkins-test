pipeline {
    agent any
    
    environment {
        DOCKER_IMAGE = 'oussama433/student-project'
        SCANNER_HOME = tool 'sonar-scanner'
        SONAR_HOST_URL = 'http://192.168.33.10:9000'
    }
    
    stages {
        stage('Checkout from GitHub') {
            steps {
                echo 'ðŸ“¥ RÃ©cupÃ©ration du code depuis GitHub...'
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: '*/main']],
                    userRemoteConfigs: [[
                        url: 'https://github.com/oussama433/mon-jenkins-test.git',
                        credentialsId: 'github-cred'
                    ]]
                ])
                echo 'âœ… Code rÃ©cupÃ©rÃ©!'
            }
        }
        
        stage('Build with Maven') {
            steps {
                echo 'ðŸ”¨ Construction du projet avec Maven...'
                sh './mvnw clean package -DskipTests'
                echo 'âœ… Build Maven rÃ©ussi!'
            }
        }
        
        stage('SonarQube Analysis') {
            steps {
                echo 'ðŸ” Analyse de la qualitÃ© du code avec SonarQube...'
                echo "URL SonarQube: ${SONAR_HOST_URL}"
                
                withCredentials([string(credentialsId: 'sonarqube-token', variable: 'SONAR_TOKEN')]) {
                    echo "âœ… Token SonarQube disponible!"
                    
                    sh """
                        ${SCANNER_HOME}/bin/sonar-scanner \
                        -Dsonar.projectKey=student-project-jenkins-${BUILD_NUMBER} \
                        -Dsonar.projectName='Student Project' \
                        -Dsonar.sources=src \
                        -Dsonar.java.binaries=target/classes \
                        -Dsonar.host.url=${SONAR_HOST_URL} \
                        -Dsonar.token=${SONAR_TOKEN}
                    """
                }
                echo 'âœ… Analyse SonarQube soumise !'
            }
        }
        
        stage('Wait for Analysis') {
            steps {
                echo 'â³ Attente de la fin de l\'analyse SonarQube...'
                sleep 30
                echo 'âœ… L\'analyse devrait Ãªtre terminÃ©e.'
                echo "ðŸ“Š VÃ©rifiez sur: ${SONAR_HOST_URL}"
                echo "ðŸ”— Lien direct: http://192.168.33.10:9000/dashboard?id=student-project-jenkins-${BUILD_NUMBER}"
            }
        }
        
        stage('Build Docker Image') {
            steps {
                echo 'ðŸ³ Construction de l\'image Docker...'
                
                sh '''
                    if [ ! -f Dockerfile ]; then
                        echo "CrÃ©ation du Dockerfile..."
                        cat > Dockerfile << DOCKERFILE
FROM eclipse-temurin:17-jre-alpine
WORKDIR /app
COPY target/*.jar app.jar
EXPOSE 8080
ENTRYPOINT ["java", "-jar", "/app.jar"]
DOCKERFILE
                    fi
                '''
                
                withCredentials([usernamePassword(
                    credentialsId: 'docker-hub-cred',
                    usernameVariable: 'DOCKER_USER',
                    passwordVariable: 'DOCKER_PASS'
                )]) {
                    sh """
                        docker build -t ${DOCKER_IMAGE}:${BUILD_NUMBER} .
                        docker tag ${DOCKER_IMAGE}:${BUILD_NUMBER} ${DOCKER_IMAGE}:latest
                        echo "âœ… Images construites et taggÃ©es!"
                        echo "   - ${DOCKER_IMAGE}:${BUILD_NUMBER}"
                        echo "   - ${DOCKER_IMAGE}:latest"
                    """
                }
                echo 'âœ… Image Docker construite !'
            }
        }
        
        stage('Push Docker Hub - OPTIONAL') {
            steps {
                echo 'ðŸ“¤ Tentative de push vers Docker Hub...'
                script {
                    try {
                        withCredentials([usernamePassword(
                            credentialsId: 'docker-hub-cred',
                            usernameVariable: 'DOCKER_USER',
                            passwordVariable: 'DOCKER_PASS'
                        )]) {
                            sh """
                                echo ${DOCKER_PASS} | docker login -u ${DOCKER_USER} --password-stdin || true
                                docker push ${DOCKER_IMAGE}:${BUILD_NUMBER} || echo "âš ï¸  Push Ã©chouÃ© - permissions insuffisantes"
                                docker push ${DOCKER_IMAGE}:latest || echo "âš ï¸  Push Ã©chouÃ© - permissions insuffisantes"
                            """
                        }
                        echo 'â„¹ï¸  Push Docker Hub optionnel - VÃ©rifiez vos permissions de token'
                    } catch (Exception e) {
                        echo "âš ï¸  Push Docker Hub ignorÃ©: ${e.message}"
                    }
                }
                echo 'â„¹ï¸  Pour activer le push Docker Hub:'
                echo '   1. Allez sur https://hub.docker.com/settings/security'
                echo '   2. CrÃ©ez un token avec permissions "Write, Delete"'
                echo '   3. Mettez Ã  jour le credential docker-hub-cred dans Jenkins'
            }
        }
    }
    
    post {
        success {
            echo 'ðŸŽ‰ðŸŽ‰ðŸŽ‰ PIPELINE RÃ‰USSI ! ðŸŽ‰ðŸŽ‰ðŸŽ‰'
            echo '================================'
            echo 'âœ… Toutes les Ã©tapes principales complÃ©tÃ©es:'
            echo '   1. âœ… Checkout GitHub'
            echo '   2. âœ… Build Maven'
            echo '   3. âœ… Analyse SonarQube - SUCCÃˆS !'
            echo '   4. âœ… Build Docker Image'
            echo '   5. âš ï¸  Push Docker Hub - Optionnel (permissions Ã  vÃ©rifier)'
            echo ''
            echo 'ðŸ”— LIENS IMPORTANTS:'
            echo "   - ðŸ“Š Rapport SonarQube: http://192.168.33.10:9000/dashboard?id=student-project-jenkins-${BUILD_NUMBER}"
            echo '   - ðŸ³ Image Docker construite localement'
            echo "   - ðŸ·ï¸  Tags: ${DOCKER_IMAGE}:${BUILD_NUMBER}, ${DOCKER_IMAGE}:latest"
            echo ''
            echo 'ðŸ’¡ Pour activer le push Docker Hub:'
            echo '   Mettez Ã  jour le token Docker Hub avec permissions "Write, Delete"'
        }
        failure {
            echo 'âŒ Pipeline a Ã©chouÃ©.'
        }
        cleanup {
            echo 'ðŸ§¹ Nettoyage...'
            sh 'docker system prune -f || true'
        }
    }
}
